pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/karthikreddy2250/my-automation-project.git'
            }
        }
        stage('Build') {
            echo 'Building the pipeline'
                steps {
                    sh 'mvn clean install -DskipTests=true'
                }
            echo 'Pipeline build successful'
        }
        stage('Test'){
            echo 'Starting the tests'
                steps{
                    sh 'mvn test -Dcucumber.filter.tags="@smoke'
                }
            echo 'Tests successful'
        }
    }
}
